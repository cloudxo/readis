<table class="table table-striped table-hover table-sm">
    <thead>
    <tr>
        <th>#</th>
        <th>Key</th>
        <th>Type</th>
        <th class="text-right">TTL in ms</th>
    </tr>
    </thead>
    <tbody>
    {% for keyInfo in keyInfoObjects %}
        <tr>
            <td width="40">
                {{ loop.index }}
            </td>
            <td>
                {% if keyInfo.getType == 'hash' %}
                    <a href="#collapse_{{ loop.index }}" data-key="{{ keyInfo.getName }}" data-toggle="collapse"
                       role="button">
                        {{ keyInfo.getName }}
                        <small class="text-muted">
                            ({{ keyInfo.countSubItems }} sub items)
                        </small>
                    </a>
                    <ol class="collapse" id="collapse_{{ loop.index }}">
                        {% for hashKey in keyInfo.getSubItems %}
                            <li>
                                <a href="{{ appConfig.getBaseUrl }}/server/{{ serverKey }}/database/{{ database }}/keys/{{ keyInfo.getName|url_encode }}/hash/{{ hashKey|url_encode }}"
                                   data-toggle="modal" data-target="#keyInfoModal" role="button">
                                    {{ hashKey }}
                                </a>
                            </li>
                        {% endfor %}
                    </ol>
                {% else %}
                    <a href="{{ appConfig.getBaseUrl }}/server/{{ serverKey }}/database/{{ database }}/keys/{{ keyInfo.getName|url_encode }}"
                       data-toggle="modal" data-target="#keyInfoModal" role="button">
                        {{ keyInfo.getName }}
                    </a>
                {% endif %}
            </td>
            <td>
                {{ keyInfo.getType }}
            </td>
            <td class="text-right">
                {% if keyInfo.getTimeToLive == -1 %}
                    &infin;
                {% elseif keyInfo.getTimeToLive == -2 %}
                    not existing
                {% else %}
                    {{ keyInfo.getTimeToLive }}
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">
                <h3 class="text-center">
                    No data found.
                </h3>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# Modal: Key Info #}

<div class="modal fade" id="keyInfoModal" tabindex="-1" role="dialog" aria-labelledby="keyInfoModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>
